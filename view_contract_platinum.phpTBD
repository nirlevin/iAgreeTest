function done(z){
	if (z.value != ""){
		$(z).addClass('selected');
		$(z).closest('.contractInput').children('img').hide();
		$('.xxx').show();}
	else{
		$(z).removeClass('selected')}	
}

function doneID(z){
	if (z.value.length == 9){
		$(z).addClass('selected');
		$(z).closest('.contractInput').children('img').hide();}
		
	else{
		$(z).removeClass('selected');
		z.value = ""
